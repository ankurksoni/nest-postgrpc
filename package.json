{
  "name": "@./source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "proto:gen": "protoc --plugin=./node_modules/.bin/protoc-gen-ts_proto --ts_proto_out=. --ts_proto_opt=nestJs=true,outputServices=grpc-js --proto_path=. libs/proto/src/lib/*.proto && mkdir -p dist/libs/proto/src/lib && cp libs/proto/src/lib/*.proto dist/libs/proto/src/lib/",
    "build:grpc": "nx build grpc-service --configuration=production",
    "build:rest-api": "nx build rest-api-service --configuration=production",
    "build:all": "npm run build:grpc && npm run build:rest-api",
    "run:grpc": "nx serve grpc-service",
    "run:rest-api": "nx serve rest-api-service",
    "start:grpc": "npm run build:grpc && npm run run:grpc",
    "start:rest-api": "npm run build:rest-api && npm run run:rest-api",
    "start:all": "npm run build:all && concurrently \"npm run run:grpc\" \"npm run run:rest-api\"",
    "test:grpc-controller": "nx test grpc-service --test-file=app.controller.spec",
    "test:rest-controller": "nx test rest-api-service --test-file=app.controller.spec",
    "test:controllers": "nx run-many --target=test --projects=grpc-service,rest-api-service --test-file=app.controller.spec"
  },
  "private": true,
  "dependencies": {
    "@grpc/grpc-js": "^1.13.3",
    "@grpc/proto-loader": "^0.7.15",
    "@nestjs/common": "^10.0.2",
    "@nestjs/core": "^10.0.2",
    "@nestjs/microservices": "^10.2.7",
    "@nestjs/platform-express": "^10.0.2",
    "axios": "^1.6.0",
    "concurrently": "^8.2.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^10.0.2",
    "@nx/eslint": "21.0.0",
    "@nx/eslint-plugin": "21.0.0",
    "@nx/jest": "21.0.0",
    "@nx/js": "21.0.0",
    "@nx/nest": "21.0.0",
    "@nx/node": "21.0.0",
    "@nx/web": "21.0.0",
    "@nx/webpack": "21.0.0",
    "@nx/workspace": "21.0.0",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/jest": "^29.5.12",
    "@types/node": "~18.16.9",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.0.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jsonc-eslint-parser": "^2.1.0",
    "nx": "21.0.0",
    "prettier": "^2.6.2",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "ts-proto": "^2.7.0",
    "tslib": "^2.3.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.19.0",
    "webpack-cli": "^5.1.4"
  }
}
